<% provide(:title, @client.name) %>
<h1><%= @client.name %></h1>
<div class="tabbable"> <!-- Only required for left/right tabs -->
  <ul class="nav nav-tabs">
    <li class="active"><a href="#tab1" data-toggle="tab">ActiveSearches (<%= @searches.count %>)</a></li>
    <li><a href="#tab2" data-toggle="tab">Past Searches (<%= Client.find(params[:id]).searches.where(:closed => true).count %>)</a></li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane active" id="tab1">
      <table class="table table-striped">
				<thead>
					<th>Client</th>
					<th>Position</th>
				</thead>
				<tbody>
					<%= render @searches %>
				</tbody>
			</table>
    </div>
    <div class="tab-pane" id="tab2">
      <table class="table table-striped">
				<thead>
					<th>Client</th>
					<th>Position</th>
				</thead>
				<tbody>
					<%= render @closed %>
				</tbody>
			</table>
    </div>
  </div>
</div>