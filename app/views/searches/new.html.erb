<% provide(:title, 'Add Search') %>
<h1>Add a New Search</h1>
<div class="row">
  <div class="span6">
	<%= simple_form_for(@search, :html => { class: 'form-horizontal' }) do |f| %>
	  <%= f.association :client,label: 'Client' %>
	  <%= f.input :position %>
	  <%= f.button :submit, label: 'Create', class: "btn btn-primary" %>
	<% end %>
	<p>Don't see your client? <%= link_to 'Add a new client.', new_client_path %>
  </div>
</div>