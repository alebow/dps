<% provide(:title, @search.position) %>
<% if @search.closed? %>
  <div class="well well-warning">
  	<center><h1><%= link_to @search.client.name, @client %> - <%= @search.position %> (Closed)</h1></center>
  </div>

  <% else %>
  <div class="well">
    <center><h1><%= link_to @search.client.name, @client %> - <%= @search.position %></h1></center>
  </div>
<% end %>

<div class="tab-pane" id="tab2">
  <table class="table table-striped">
    <thead>
      <th>Position</th>
      <th>Fee</th>
    </thead>
    <tbody>
      <tr>
        <td><%= @search.position %></td>
        <td><%= @search.fee %></td>
      </tr>
    </tbody>
  </table>
</div>



