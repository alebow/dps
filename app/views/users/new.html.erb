<% provide(:title, 'Sign Up') %>
<h1>Create an Account</h1>

<div class="row">
  <div class="span6">
    <%= simple_form_for(@user) do |f| %>
    <%= render 'shared/error_messages' %>

      <%= f.input :name %>
      <%= f.input :email %>
      <%#= f.association :team, as: :radio_buttons, label: 'Partner' %>
      <%= f.input :password %>
      <%= f.input :password_confirmation, label: 'Confirmation' %>
      <%= f.button :submit, label: 'Create', class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
