<% provide(:title, 'Sign Up') %>
<h1>Create an Account</h1>
  <%= simple_form_for(@user) do |f| %>
    <%= render 'shared/error_messages' %>
      <%= f.input :name %>
      <%= f.input :email %>
      <%= f.association :team, label_method: :id %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>
    <div class="well">
      <%= f.button :submit, label: 'Create', class: "btn btn-primary" %>
    </div>
  <% end %>